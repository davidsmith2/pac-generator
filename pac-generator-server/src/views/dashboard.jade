doctype html
html
    head
        title #{pageName} | #{appName}
        link(href='/static/css/index.css', rel='stylesheet', type='text/css')
        script.
            window.user = {
                id: "#{user.id}",
                uuid: "#{user.uuid}"
            };
    body
        .container
            header#header-region(data-title='#{appName}', data-username='#{user.local.email}')
            nav#nav-region
            footer#footer-region
        #modal-region
        script(type='text/javascript', src='/static/js/libs.js')
        script(type='text/javascript', src='/static/js/app.js')
