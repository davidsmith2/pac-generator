FROM node:0.10

ENV HOME=/home/app

COPY package.json $HOME/pac-generator/

WORKDIR $HOME/pac-generator

RUN npm install -g grunt-cli && npm install

COPY Gruntfile.js $HOME/pac-generator/

COPY tasks $HOME/pac-generator/tasks

COPY src $HOME/pac-generator/src

RUN mkdir $HOME/pac-generator/dist && \
	ln -s $HOME/pac-generator/dist /mnt

CMD grunt build
