{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "assets",
      "host": {
        "sourcePath": "/var/app/current/assets"
      }
    },
    {
      "name": "uploads",
      "host": {
        "sourcePath": "/var/app/uploads"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "pac-generator-server",
      "image": "davidsmith2/pac-generator-server",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 8081,
          "containerPort": 8081
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "DB_URL",
          "value": "mongodb://admin:admin@ds031691.mlab.com:31691/pac-generator"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "uploads",
          "containerPath": "/usr/src/app/dist"
        }
      ]
    },
    {
      "name": "pac-generator-proxy",
      "image": "davidsmith2/pac-generator-proxy",
      "essential": false,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "pac-generator-server"
      ],
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-pac-generator-proxy",
          "containerPath": "/var/log/nginx"
        },
        {
          "sourceVolume": "assets",
          "containerPath": "/usr/src/app/dist"
        }
      ]
    }
  ]
}